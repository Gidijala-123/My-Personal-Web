    .menu.open .menu-link .text-item {
    color: white;
    text-transform: uppercase;
    font-weight: 800;
    font-size: 4.4vw;
    opacity: 0.3;
    width: 100%;
    height: 20%;
    letter-spacing: 5px;
    transform: rotate(-90deg) translateX(0px);
    transition: all 0.4s 0.2s ease-in-out, letter-spacing 0.2s ease-in, opacity 0.2s ease-in;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    transform-origin: center;
    animation: text-in 0.6s ease;
    position: absolute;
    margin-top:-45px;
    text-shadow:
    0 2.8px 2.2px rgba(0, 0, 0, 0.034),
    0 6.7px 5.3px rgba(0, 0, 0, 0.048),
    0 12.5px 10px rgba(0, 0, 0, 0.06),
    0 22.3px 17.9px rgba(0, 0, 0, 0.072),
    0 35px 25px rgba(0, 0, 0, 0.086),
    0 20px 20px rgba(0, 0, 0, 0.12);
    }
  
    @keyframes text-in {
    0% {
    opacity: 0;
    }
    20% {
    opacity: 0;
    }
    100% {
    opacity: 0.3;
    }
    }
    .menu.open .menu-link .text-item .icon {
    position: absolute;
    display: flex;
    width: 30px;
    height: 30px;
    opacity: 0;
    transform: translateY(0px);
    transition: all 0.4s ease-in-out;
    background-image: url("https://rafaelalucas91.github.io/assets/icons/white/icon-54.svg");
    }
  
    .menu.open .menu-link .submenu {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 40px;
    box-sizing: border-box;
    opacity: 0;
    z-index: -1;
    transition: all 0.6s ease-in-out;
    height: 0%;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.1);
    bottom: 0;
    transform: translateY(50%);
    position: absolute;
    }
   
    .menu.open .menu-link .submenu .sub-item {
    display: none;
    margin: 10px 0;
    color: white;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 20px;
    font-weight: 600;
    position: relative;
    width: fit-content;
    cursor: pointer;
    padding: 5px 15px;
    }
  
    .menu.open .menu-link .submenu .sub-item:after {
    content: "";
    height: 0%;
    width: 3px;
    background-color: white;
    opacity: 0.3;
    position: absolute;
    top: 0;
    left: 0;
    transition: height 0.4s 0.3s ease, width 0.4s ease;
    }
    .menu.open .menu-link .submenu .sub-item:hover:after {
    width: 100%;
    height: 100%;
    z-index:-1;
    transition: height 0.4s ease, width 0.4s 0.3s ease;
    }
    .menu.open .menu-link:hover {
    width: 50%;
    transition: all 0.4s ease-in-out;
    /* When Click to Open Sub Menu */
    }
    .menu.open .menu-link:hover .text-item {
    height: 50%;
    transform: rotate(0deg) translateX(0px);
    font-size: 30px;
    opacity: 1;
    letter-spacing: 10px;
    }
    .menu.open .menu-link:hover .text-item .icon {
    opacity: 1;
    transform: translateY(40px);
    transition: all 0.3s 0.4s ease-in-out;
    }
    .menu.open .menu-link:hover.active .text-item {
    transform: rotate(0deg) translateX(0px) translateY(-50%);
    transform-origin: center center;
    transition: all 0.6s ease-in-out;
    }
  
    .menu.open .menu-link:hover.active .text-item .icon {
    transition: all 0.3s ease-in-out;
    transform: translateY(40px) rotate(-180deg);
    }
    .menu.open .menu-link:hover.active .submenu {
    transform: translateY(0);
    height: 70%;
    z-index: 1;
    opacity: 1;
    bottom: 0;
    }
  
    .menu.open .menu-link:hover.active .submenu .sub-item {
    display: flex;
    animation: submenu 1s ease forwards;
    z-index: 2;
    }
    @keyframes submenu {
    0% {
    transform: translatex(50px) rotate(5-deg);
    opacity: 0;
    }
    50% {
    transform: translatex(50px) rotate(-5deg);
    opacity: 0;
    }
    100% {
    opacity: 1;
    transform: translatex(0px) rotate(0deg);
    }
    }
    .menu.open .menu-link:hover.active .submenu .sub-item:nth-child(1) {
    animation-duration: 1s;
    }
    .menu.open .menu-link:hover.active .submenu .sub-item:nth-child(2) {
    animation-duration: 1.3s;
    }
    .menu.open .menu-link:hover.active .submenu .sub-item:nth-child(3) {
    animation-duration: 1.6s;
    }
    .menu.open .menu-link:hover.active .submenu .sub-item:nth-child(4) {
    animation-duration: 1.9s;
    }
    .menu.open .menu-link:hover.active .submenu .sub-item:nth-child(5) {
    animation-duration: 2.2s;
    }
    .menu.open .menu-link:hover.active .submenu .sub-item:nth-child(6) {
    animation-duration: 2.5s;
    }
    .menu.open .menu-link:hover.active .submenu .sub-item:nth-child(7) {
    animation-duration: 2.8s;
    }
    .menu.open .menu-link:hover.active .submenu .sub-item:nth-child(8) {
    animation-duration: 3.1s;
    }
  
    .menu.close .menu-link {
    animation: menu-close 1s ease forwards;
    }
    @keyframes menu-close {
    0% {
    height: 100vh;
    }
    100% {
    height: 0;
    }
    }
    .menu.close .menu-link .text-item {
    animation: text-out 0.6s ease forwards;
    }
    @keyframes text-out {
    0% {
    opacity: 0.3;
    }
    80% {
    opacity: 0;
    }
    100% {
    opacity: 0;
    }
    }
      

  script.
    //- var iconMenu = document.querySelector('#Submit'),
    var menu = document.querySelector('.menu');
    var menuLink = document.querySelectorAll('.menu-link.sub');

    //- menu.addEventListener(openMenu());
    window.onload = openMenu();
    function openMenu() 
    {
      if(menu.classList.contains('open')) 
      {
        menu.classList.add('close');
        //- classList.remove('icon-closed');
        setTimeout(function() 
        {
          menu.classList.remove('open');
        }, 1300);
      } 
      else
      {
        menu.classList.remove('close');
        menu.classList.add('open');
        //- classList.add('icon-closed');
      }
    }

    menuLink.forEach(function(el) {
    el.addEventListener('click', openSubmenu);
    });
    function openSubmenu(event) {
    if (event.currentTarget.classList.contains("active")) {
    event.currentTarget.classList.remove("active");
    } else {
    event.currentTarget.classList.add("active");
    }
    }

