    0% {
    height: 0;
    transform: translatey(-50%);
    }
    100% {
    height: 100vh;
    transform: translatey(0%);
    }
    }
    .menu.open .menu-link:nth-child(1) {
    background-color: #31C5C5;
    animation-duration: 0.6s;
    }
    .menu.open .menu-link:nth-child(2) {
    background-color: #412F49;
