    }
    .menu.open .menu-link:nth-child(4) {
    background-color: #F9C16E;
    animation-duration: 1.2s;
    }
    .menu.open .menu-link:nth-child(5) {
    background-color: #6B9449;
    animation-duration: 1.2s;
    }
    .menu.open .menu-link:nth-child(6) {
    background-color:#963A56;
    animation-duration: 1.2s;
